@{
    ViewData["Title"] = "Painel Administrativo";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">
    <h2 class="mb-4 text-center">
        <i class="fas fa-tools me-2"></i> Painel Administrativo
    </h2>

    <div class="alert alert-info text-center">
        Bem-vindo ao painel de administração da <strong>WorkAcademy</strong>. Gerencie usuários, cursos, vagas e empresas de forma prática.
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-3 text-primary"></i>
                    <h5 class="card-title">Gerenciar Usuários</h5>
                    <p class="card-text">Visualize, edite, bloqueie e atribua permissões aos usuários cadastrados.</p>
                    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-primary w-100">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <!-- ✅ NOVO CARD: CURSOS PENDENTES -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-book-open fa-2x mb-3 text-success"></i>
                    <h5 class="card-title">Cursos Pendentes</h5>
                    <p class="card-text">Aprove os cursos criados por empresas antes de publicar.</p>
                    <a asp-controller="Admin" asp-action="CursosPendentes" class="btn btn-success w-100">
                        Moderar
                    </a>
                </div>
            </div>
        </div>
        <!-- ✅ FIM DO CARD ADICIONADO -->

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-2x mb-3 text-success"></i>
                    <h5 class="card-title">Ver Cursos</h5>
                    <p class="card-text">Gerencie todos os cursos disponíveis na plataforma.</p>
                    <a asp-controller="Cursos" asp-action="Index" class="btn btn-success w-100">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-briefcase fa-2x mb-3 text-warning"></i>
                    <h5 class="card-title">Ver Vagas</h5>
                    <p class="card-text">Visualize e administre as vagas de emprego cadastradas.</p>
                    <a asp-controller="Vagas" asp-action="Index" class="btn btn-warning w-100 text-dark">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-2x mb-3 text-info"></i>
                    <h5 class="card-title">Ver Empresas</h5>
                    <p class="card-text">Gerencie as empresas registradas e suas permissões.</p>
                    <a asp-controller="Empresas" asp-action="Index" class="btn btn-info text-white w-100">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3 text-danger"></i>
                    <h5 class="card-title">Canal de Denúncias</h5>
                    <p class="card-text">Usuários denunciaram conteúdos que precisam ser avaliados.</p>
                    <a asp-controller="Denuncias" asp-action="Index" class="btn btn-danger w-100 position-relative">
                        Acessar
                        @if (ViewBag.DenunciasPendentes > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">
                                @ViewBag.DenunciasPendentes
                            </span>
                        }
                    </a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-check fa-2x mb-3 text-secondary"></i>
                    <h5 class="card-title">Vagas Pendentes</h5>
                    <p class="card-text">Aprove ou rejeite as vagas criadas por empresas.</p>
                    <a asp-controller="Admin" asp-action="VagasPendentes" class="btn btn-secondary w-100">
                        Moderar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
