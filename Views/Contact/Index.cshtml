@model WorkAcademy.Models.ContactViewModel
@{
    ViewData["Title"] = "Fale Conosco";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="display-4 mb-4">@ViewData["Title"]</h1>
            <p class="lead mb-5">Tem dúvidas, sugestões ou precisa de ajuda? Entre em contato conosco!</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Index" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nome Completo</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Subject" class="form-label">Assunto</label>
                    <input asp-for="Subject" class="form-control" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Message" class="form-label">Mensagem</label>
                    <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane me-2"></i>Enviar Mensagem
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body p-4">
                    <h3 class="h4 mb-4">Informações de Contato</h3>

                    <div class="d-flex align-items-start mb-4">
                        <div class="me-3 text-primary">
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="h6 mb-1">Endereço</h4>
                            <p class="mb-0">Av. Resende, 1000<br>Resende - RJ, 27500-100</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-4">
                        <div class="me-3 text-primary">
                            <i class="fas fa-phone-alt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="h6 mb-1">Telefone</h4>
                            <p class="mb-0">(24) 9999-99999</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-4">
                        <div class="me-3 text-primary">
                            <i class="fas fa-envelope fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="h6 mb-1">Email</h4>
                            <p class="mb-0">contato@workacademy.com.br</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start">
                        <div class="me-3 text-primary">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="h6 mb-1">Horário de Atendimento</h4>
                            <p class="mb-0">Segunda a Sexta: 9h às 18h<br>Sábado: 9h às 13h</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h3 class="h4 mb-3">Nos encontre nas redes sociais</h3>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-primary btn-social">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-info btn-social">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-social">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark btn-social">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Exemplo de validação customizada
        document.addEventListener('DOMContentLoaded', function() {
            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>

    <style>
        .btn-social {
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
        }
    </style>
}