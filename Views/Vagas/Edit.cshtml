@model WorkAcademy.Models.Vaga
@{
    ViewData["Title"] = "Editar Vaga";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-4">
    <h2 class="mb-3"><i class="fas fa-pen-to-square me-2"></i>Editar Vaga</h2>
    @if (!string.IsNullOrWhiteSpace(Model.MotivoRejeicao))
    {
        <div class="alert alert-danger">
            <strong>Motivo da rejeição do administrador:</strong><br />
            @Model.MotivoRejeicao
        </div>
    }
    <div class="alert alert-warning">
        <strong>Atenção:</strong> vagas só podem ser editadas enquanto estiverem <em>pendentes</em>.
        Após salvar, a vaga ficará novamente aguardando aprovação do administrador.
    </div>

    <form asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-8">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Area" class="form-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Localizacao" class="form-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="TipoContrato" class="form-label"></label>
                <input asp-for="TipoContrato" class="form-control" placeholder="CLT, PJ, Estágio..." />
                <span asp-validation-for="TipoContrato" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Salario" class="form-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="DataExpiracao" class="form-label"></label>
                <input asp-for="DataExpiracao" class="form-control" type="date" />
                <span asp-validation-for="DataExpiracao" class="text-danger"></span>
            </div>

            <!-- Campos que a empresa NÃO deve editar: EmpresaId, Aprovada, DataPublicacao -->
        </div>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="MinhasVagas" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Voltar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane me-1"></i>Salvar e Enviar para Análise
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
