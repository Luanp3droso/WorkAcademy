@model IEnumerable<WorkAcademy.Models.Vaga>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Vagas Disponíveis";
    var isAdmin = User.IsInRole("Admin");
    var isEmpresa = User.IsInRole("Empresa");
}

<div class="container mt-4 mb-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group shadow-sm">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Pesquisar por cargo, empresa ou área..."
                           value="@ViewBag.CurrentFilter" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>

        @if (isAdmin || isEmpresa)
        {
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nova Vaga
                </a>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h5>Nenhuma vaga encontrada</h5>
            <p>Tente ajustar sua busca ou cadastre uma nova vaga</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            @foreach (var item in Model)
            {
                <div class="col mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="card-title mb-0">@item.Nome</h5>
                            <small class="d-block">@item.Empresa?.NomeFantasia</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@item.Descricao</p>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="badge bg-info">@item.Area</span>
                                <span class="text-success fw-bold">@item.Salario?.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small><i class="fas fa-map-marker-alt"></i> @item.Localizacao</small>
                                <small><i class="fas fa-file-contract"></i> @item.TipoContrato</small>
                            </div>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="far fa-calendar-alt"></i> @item.DataPublicacao.ToString("dd/MM/yyyy")
                            </small>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @* Botão de denúncia apenas para usuários comuns logados *@
                                @if (SignInManager.IsSignedIn(User) && !isAdmin && !isEmpresa)
                                {
                                    <a asp-controller="PublicaDenuncia"
                                       asp-action="Criar"
                                       asp-route-tipo="Vaga"
                                       asp-route-id="@item.Id"
                                       title="Denunciar vaga"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-flag"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .col.mb-4 {
            margin-bottom: 2rem !important;
        }

        body {
            padding-bottom: 3rem;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 8px;
            border: none;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .badge {
            font-size: 0.8rem;
            padding: 0.35em 0.65em;
        }

        .card-header {
            border-radius: 8px 8px 0 0 !important;
        }
    </style>
}
