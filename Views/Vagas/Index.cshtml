@model IEnumerable<WorkAcademy.Models.Vaga>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Vagas Disponíveis";
    var isAdmin = User.IsInRole("Admin");
    var isEmpresa = User.IsInRole("Empresa");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5" style="max-width: 1100px;">

    <!-- HERO / Cabeçalho + Nova Vaga -->
    <div class="hero-vagas mb-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <h1 class="hero-title m-0">@ViewData["Title"]</h1>

            @if (isAdmin || isEmpresa)
            {
                <a asp-action="Create" class="btn btn-success px-3 py-2 rounded-3">
                    <i class="bi bi-plus-lg me-1"></i> Nova Vaga
                </a>
            }
        </div>

        <!-- Busca -->
        <form asp-action="Index" method="get" class="search-wrap">
            <div class="input-group input-group-lg">
                <input type="text"
                       name="searchString"
                       class="form-control"
                       placeholder="Pesquisar por cargo, empresa ou área..."
                       value="@ViewBag.CurrentFilter" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Buscar
                </button>
            </div>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <!-- Estado vazio -->
        <div class="empty-box text-center">
            <div class="fw-semibold mb-1">Nenhuma vaga encontrada</div>
            <small>Tente ajustar sua busca ou cadastre uma nova vaga.</small>
        </div>
    }
    else
    {
        <div class="row g-4 mb-5">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6">
                    <div class="card vaga-card h-100">

                        <div class="card-body">
                            <div class="d-flex align-items-start justify-content-between mb-2">
                                <div class="d-flex align-items-center gap-3">
                                    <!-- Avatar simples (ícone), sem depender de LogoUrl -->
                                    <div class="avatar-logo">
                                        <i class="bi bi-briefcase"></i>
                                    </div>

                                    <div>
                                        <h5 class="card-title mb-1">@item.Nome</h5>
                                        <div class="text-muted small">@item.Empresa?.NomeFantasia</div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    @if (!string.IsNullOrWhiteSpace(item.Area))
                                    {
                                        <span class="badge badge-soft px-3 py-2">@item.Area</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.TipoContrato))
                                    {
                                        <span class="badge badge-soft px-3 py-2">@item.TipoContrato</span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(item.Localizacao))
                            {
                                <div class="text-muted mb-2">
                                    <i class="bi bi-geo-alt me-1"></i> @item.Localizacao
                                </div>
                            }

                        <p class="text-muted mb-3" style="min-height:3rem;">
                            @(string.IsNullOrWhiteSpace(item.Descricao)
                                                    ? "Sem descrição."
                                                    : (item.Descricao.Length > 180 ? item.Descricao.Substring(0, 180) + "..." : item.Descricao))
                    </p>

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-baseline gap-2">
                            @if (item.Salario.HasValue && item.Salario.Value > 0)
                                    {
                                        <span class="price">R$ @item.Salario.Value.ToString("N2")</span>
                                    }
                                </div>

                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-ghost rounded-3">
                                    Ver detalhes
                                </a>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center px-4 pb-4">
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i> @item.DataPublicacao.ToString("dd/MM/yyyy")
                            </small>

                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-outline-primary btn-sm" title="Ver">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @* Botão de denúncia apenas para usuários comuns logados *@
                                @if (SignInManager.IsSignedIn(User) && !isAdmin && !isEmpresa)
                                {
                                    <a asp-controller="PublicaDenuncia"
                                       asp-action="Criar"
                                       asp-route-tipo="Vaga"
                                       asp-route-id="@item.Id"
                                       title="Denunciar vaga"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-flag"></i>
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        /* --- Hero / Cabeçalho --- */
        .hero-vagas {
            background: linear-gradient(180deg, #eef3f8 0%, #f7f9fc 100%);
            border-radius: 18px;
            padding: 36px 28px;
            box-shadow: 0 6px 22px rgba(21, 34, 50, .06);
        }

        .hero-title {
            font-weight: 800;
            letter-spacing: .2px;
            color: #2d3e50;
        }

        /* --- Busca --- */
        .search-wrap {
            max-width: 760px;
            margin: 18px auto 0;
        }

            .search-wrap .form-control {
                border-radius: 12px 0 0 12px;
                height: 56px;
                padding-left: 18px;
                border-color: #dbe3ea;
                box-shadow: none;
            }

            .search-wrap .btn {
                border-radius: 0 12px 12px 0;
                height: 56px;
                padding: 0 20px;
                font-weight: 600;
            }

        /* --- Cards --- */
        .vaga-card {
            border: 0;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 22px rgba(28, 41, 61, .08);
            transition: transform .18s ease, box-shadow .18s ease;
            background: #fff;
        }

            .vaga-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 14px 30px rgba(28, 41, 61, .12);
            }

        /* Avatar simples (ícone) */
        .avatar-logo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            color: #2d3e50;
            background: #e6eef7;
        }

        .badge-soft {
            background: #eef5ff;
            color: #2b6cb0;
            border-radius: 999px;
            font-weight: 600;
        }

        .price {
            font-weight: 800;
            color: #2f855a;
        }

        .btn-ghost {
            border: 1px solid #cfe0f0;
            color: #2b6cb0;
            font-weight: 600;
        }

            .btn-ghost:hover {
                background: #e8f1fb;
                border-color: #b5d2f0;
                color: #1e4f86;
            }
    </style>
}
