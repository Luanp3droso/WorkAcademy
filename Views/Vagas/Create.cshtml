@model WorkAcademy.Models.Vaga
@{
    ViewData["Title"] = "Nova Vaga";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5" style="max-width: 980px;">

    <!-- HERO -->
    <div class="hero-create mb-4 d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <h1 class="m-0 hero-title">Cadastrar Vaga</h1>
            <p class="text-muted mb-0">Preencha as informações abaixo e publique sua oportunidade.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-4 p-md-5">

            <form asp-action="Create" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <!-- Coluna principal -->
                    <div class="col-12 col-lg-8">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body p-4">

                                <h5 class="section-title mb-3"><i class="bi bi-briefcase me-2"></i>Informações da Vaga</h5>

                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label fw-semibold">Título da vaga</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Ex.: Desenvolvedor .NET Pleno" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Area" class="form-label fw-semibold">Área</label>
                                        <input asp-for="Area" class="form-control" placeholder="Ex.: Tecnologia" />
                                        <span asp-validation-for="Area" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Localizacao" class="form-label fw-semibold">Localização</label>
                                        <input asp-for="Localizacao" class="form-control" placeholder="Ex.: Resende - RJ / Remoto" />
                                        <span asp-validation-for="Localizacao" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                                    <textarea asp-for="Descricao" rows="7" class="form-control"
                                              placeholder="Responsabilidades, requisitos, benefícios, processo seletivo..."></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Coluna lateral -->
                    <div class="col-12 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body p-4">

                                <h5 class="section-title mb-3"><i class="bi bi-gear me-2"></i>Contrato & Empresa</h5>

                                <div class="mb-3">
                                    <label asp-for="TipoContrato" class="form-label fw-semibold">Tipo de contrato</label>
                                    <select asp-for="TipoContrato" class="form-select">
                                        <option value="">Selecione...</option>
                                        <option>CLT</option>
                                        <option>PJ</option>
                                        <option>Estágio</option>
                                        <option>Temporário</option>
                                        <option>Freelancer</option>
                                    </select>
                                    <span asp-validation-for="TipoContrato" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Salario" class="form-label fw-semibold">Salário (opcional)</label>
                                    <input asp-for="Salario" type="number" step="0.01" min="0" class="form-control" placeholder="Ex.: 4500,00" />
                                    <span asp-validation-for="Salario" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EmpresaId" class="form-label fw-semibold">Empresa</label>

                                    @* Se o controller enviar ViewBag.Empresas = new SelectList(...), o dropdown aparece *@
                                    @if (ViewBag.Empresas != null)
                                    {
                                        <select asp-for="EmpresaId" asp-items="ViewBag.Empresas" class="form-select">
                                            <option value="">Selecione...</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <input asp-for="EmpresaId" type="number" class="form-control" placeholder="ID da empresa" />
                                    }

                                    <span asp-validation-for="EmpresaId" class="text-danger"></span>
                                    <span class="form-text">Se a lista não aparecer, envie um SelectList em <code>ViewBag.Empresas</code> (Id/Nome).</span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ações -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-light border">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Publicar vaga
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-create {
            background: linear-gradient(180deg,#eef3f8 0%,#f7f9fc 100%);
            border-radius: 18px;
            padding: 26px 24px;
            box-shadow: 0 6px 22px rgba(21,34,50,.06);
        }

        .hero-title {
            font-weight: 800;
            letter-spacing: .2px;
            color: #2d3e50;
        }

        .section-title {
            font-weight: 700;
            color: #2d3e50;
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
