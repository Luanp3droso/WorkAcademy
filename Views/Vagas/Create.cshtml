@model WorkAcademy.Models.Vaga
@{
    ViewData["Title"] = "Criar Vaga";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-briefcase"></i> Criar Nova Vaga</h4>
                    <a asp-action="Index" class="btn btn-sm btn-light">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>

                <div class="card-body">
                    <form asp-controller="Vagas" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-semibold"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Desenvolvedor Full Stack" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-semibold"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="5" placeholder="Detalhe as responsabilidades e requisitos da vaga..."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        @* Mostra seleção de empresa só para Admin *@
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mb-3">
                                <label asp-for="EmpresaId" class="form-label fw-semibold">Empresa</label>
                                <select asp-for="EmpresaId" class="form-select" asp-items="ViewBag.Empresas">
                                    <option value="">Selecione uma empresa...</option>
                                </select>
                                <span asp-validation-for="EmpresaId" class="text-danger"></span>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Area" class="form-label fw-semibold"></label>
                                <input asp-for="Area" class="form-control" placeholder="Ex: Tecnologia da Informação" />
                                <span asp-validation-for="Area" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Salario" class="form-label fw-semibold"></label>
                                <input asp-for="Salario" class="form-control" placeholder="Ex: 5000,00" />
                                <span asp-validation-for="Salario" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Localizacao" class="form-label fw-semibold"></label>
                                <input asp-for="Localizacao" class="form-control" placeholder="Cidade/Estado ou Remoto" />
                                <span asp-validation-for="Localizacao" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TipoContrato" class="form-label fw-semibold"></label>
                                <input asp-for="TipoContrato" class="form-control" placeholder="CLT, PJ, Estágio..." />
                                <span asp-validation-for="TipoContrato" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataExpiracao" class="form-label fw-semibold"></label>
                            <input asp-for="DataExpiracao" type="date" class="form-control" />
                            <span asp-validation-for="DataExpiracao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check2-circle"></i> Salvar Vaga
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
