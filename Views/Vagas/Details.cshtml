@model WorkAcademy.Models.Vaga

@{
    ViewData["Title"] = "Detalhes da Vaga";
    var outrasVagas = ViewBag.OutrasVagas as List<WorkAcademy.Models.Vaga>;
    var podeCandidatar = User.Identity.IsAuthenticated && !User.IsInRole("Admin") && !User.IsInRole("Empresa");
}

<div class="container mt-5 mb-5" style="max-width: 760px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-briefcase me-1"></i> @Model.Nome
            </h4>
            @if (Model.Empresa != null)
            {
                <small class="d-block mt-1">
                    <i class="fas fa-building me-1"></i> @Model.Empresa.NomeFantasia
                </small>
            }
        </div>

        <div class="card-body">
            <p class="mb-4 text-muted">@Model.Descricao</p>

            <div class="row mb-3">
                <div class="col-md-6 mb-2">
                    <strong><i class="fas fa-layer-group me-1"></i> Área:</strong>
                    <span class="ms-1">@Model.Area</span>
                </div>
                <div class="col-md-6 mb-2">
                    <strong><i class="fas fa-file-contract me-1"></i> Tipo de Contrato:</strong>
                    <span class="ms-1">@Model.TipoContrato</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-2">
                    <strong><i class="fas fa-map-marker-alt me-1"></i> Localização:</strong>
                    <span class="ms-1">@Model.Localizacao</span>
                </div>
                <div class="col-md-6 mb-2">
                    <strong><i class="fas fa-calendar-alt me-1"></i> Publicado em:</strong>
                    <span class="ms-1">@Model.DataPublicacao.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            @if (Model.Salario.HasValue && Model.Salario > 0)
            {
                <div class="mb-3">
                    <strong><i class="fas fa-money-bill-wave me-1"></i> Salário:</strong>
                    <span class="ms-1">@Model.Salario?.ToString("C")</span>
                </div>
            }

            @if (podeCandidatar)
            {
                <div class="text-end">
                    <a asp-action="Candidatar" asp-route-id="@Model.Id" class="btn btn-success mt-3">
                        <i class="fas fa-paper-plane me-1"></i> Candidatar-se
                    </a>
                </div>
            }
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    @if (outrasVagas != null && outrasVagas.Any())
    {
        <h4 class="mt-5 mb-3">Mais vagas dessa empresa</h4>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var vaga in outrasVagas)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@vaga.Nome</h5>
                            <p class="card-text">@vaga.Descricao?.Substring(0, Math.Min(80, vaga.Descricao.Length))...</p>
                            <a asp-action="Details" asp-route-id="@vaga.Id" class="btn btn-outline-primary btn-sm">
                                Ver detalhes
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
