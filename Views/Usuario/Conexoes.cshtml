@{
    ViewData["Title"] = "Minhas Conexões";
    var amigos = ViewBag.Amigos as List<WorkAcademy.Models.Usuario>;
    int usuarioId = ViewBag.UsuarioId;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-people-fill me-2"></i>Minhas Conexões</h2>
    </div>

    @if (amigos != null && amigos.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var a in amigos)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(a.FotoPerfil) ? "/img/avatar-default.png" : a.FotoPerfil)"
                                 class="rounded-circle me-3" width="60" height="60" style="object-fit: cover;" />
                            <div class="flex-grow-1">
                                <h5 class="mb-1">@a.NomeCompleto</h5>
                                <div class="d-flex mt-2">
                                    <a asp-action="Ver" asp-route-id="@a.Id" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="bi bi-person-lines-fill me-1"></i> Ver Perfil
                                    </a>
                                    <form asp-action="Desconectar" method="post" class="m-0">
                                        <input type="hidden" name="usuarioId" value="@usuarioId" />
                                        <input type="hidden" name="conectadoComId" value="@a.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i> Remover
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Você ainda não possui conexões. Conecte-se com outros usuários pela Home.
        </div>
    }
</div>
