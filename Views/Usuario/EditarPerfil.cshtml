@model WorkAcademy.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container py-5" style="max-width: 720px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4"><i class="bi bi-pencil-square me-1"></i> Editar Informações do Perfil</h3>

            @if (TempData["Sucesso"] != null)
            {
                <div class="alert alert-success">@TempData["Sucesso"]</div>
            }
            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger">@TempData["Erro"]</div>
            }

            <form asp-action="EditarPerfil" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NomeCompleto" class="form-label">Nome Completo</label>
                    <input asp-for="NomeCompleto" class="form-control" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Biografia" class="form-label">Biografia</label>
                    <textarea asp-for="Biografia" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco" class="form-label">Endereço</label>
                    <input asp-for="Endereco" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Celular" class="form-label">Celular</label>
                    <input asp-for="Celular" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="AreaInteresse" class="form-label">Área de Interesse</label>
                    <input asp-for="AreaInteresse" class="form-control" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Perfil" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
