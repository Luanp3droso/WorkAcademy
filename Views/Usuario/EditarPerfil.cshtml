@model WorkAcademy.Models.ViewModels.UsuarioEditViewModel

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container py-5" style="max-width: 720px;">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h3 class="mb-4 text-primary fw-bold">
                <i class="bi bi-pencil-square me-2"></i>Editar Informações do Perfil
            </h3>

            @* ✅ Mensagem de sucesso imediata *@
            @if (ViewBag.Sucesso != null)
            {
                <div class="alert alert-success">@ViewBag.Sucesso</div>
            }

            @* ✅ Mensagem de erro apenas quando houver falha *@
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            }

            <form asp-action="EditarPerfil" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NomeCompleto" class="form-label fw-semibold">Nome Completo</label>
                    <input asp-for="NomeCompleto" class="form-control" placeholder="Digite seu nome completo" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Biografia" class="form-label fw-semibold">Biografia</label>
                    <textarea asp-for="Biografia" class="form-control" rows="3" placeholder="Fale um pouco sobre você"></textarea>
                    <span asp-validation-for="Biografia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco" class="form-label fw-semibold">Endereço</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Rua, número, bairro, cidade" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Celular" class="form-label fw-semibold">Celular</label>
                    <input asp-for="Celular" class="form-control" placeholder="24999999999" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AreaInteresse" class="form-label fw-semibold">Área de Interesse</label>
                    <input asp-for="AreaInteresse" class="form-control" placeholder="Ex: Tecnologia, Educação, Gestão..." />
                    <span asp-validation-for="AreaInteresse" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Perfil" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-lg"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
