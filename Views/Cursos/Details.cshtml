@model WorkAcademy.Models.Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagemUrl" alt="Imagem do curso" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Nome</h2>
            <p class="text-muted">Instrutor: @Model.NomeInstrutor</p>

            <div class="mb-3">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="bi @(i <= Model.Avaliacao ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                }
                <small>(@Model.TotalAvaliacoes avaliações)</small>
            </div>

            <h4 class="text-danger">R$ @Model.Valor.ToString("F2")</h4>
            <p class="text-muted text-decoration-line-through">De R$ @Model.PrecoOriginal.ToString("F2")</p>

            <p class="mt-4">@Model.Descricao</p>

            <form asp-controller="Cursos" asp-action="Inscrever" method="post">
                <input type="hidden" name="cursoId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary w-100 mt-3">Inscrever-se no curso</button>
            </form>
        </div>
    </div>
</div>
