@model WorkAcademy.Models.Curso
@{
    ViewData["Title"] = "Novo Curso";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5" style="max-width: 980px;">

    <!-- HERO -->
    <div class="hero-create mb-4 d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <h1 class="m-0 hero-title">Cadastrar Curso</h1>
            <p class="text-muted mb-0">Preencha as informações abaixo e publique seu curso.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-4 p-md-5">

            <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <!-- Coluna principal -->
                    <div class="col-12 col-lg-8">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body p-4">

                                <h5 class="section-title mb-3"><i class="bi bi-journal-text me-2"></i>Informações Gerais</h5>

                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label fw-semibold">Nome do curso</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Ex.: Fundamentos de C#" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="NomeInstrutor" class="form-label fw-semibold">Instrutor</label>
                                        <input asp-for="NomeInstrutor" class="form-control" placeholder="Ex.: Ana Lima" />
                                        <span asp-validation-for="NomeInstrutor" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Categoria" class="form-label fw-semibold">Categoria</label>
                                        <input asp-for="Categoria" class="form-control" placeholder="Ex.: Programação" />
                                        <span asp-validation-for="Categoria" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row g-3 mt-1">
                                    <div class="col-md-6">
                                        <label asp-for="Nivel" class="form-label fw-semibold">Nível</label>
                                        <select asp-for="Nivel" class="form-select">
                                            <option value="">Selecione...</option>
                                            <option>Iniciante</option>
                                            <option>Intermediário</option>
                                            <option>Avançado</option>
                                        </select>
                                        <span asp-validation-for="Nivel" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="DuracaoMeses" class="form-label fw-semibold">Duração (meses)</label>
                                        <input asp-for="DuracaoMeses" type="number" min="0" class="form-control" />
                                        <span asp-validation-for="DuracaoMeses" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                                    <textarea asp-for="Descricao" rows="6" class="form-control" placeholder="Conte o que o aluno irá aprender, pré-requisitos etc."></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>

                                <div class="row g-3 mt-1">
                                    <div class="col-md-6">
                                        <label asp-for="Valor" class="form-label fw-semibold">Preço atual</label>
                                        <input asp-for="Valor" type="number" step="0.01" min="0" class="form-control" />
                                        <span asp-validation-for="Valor" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="PrecoOriginal" class="form-label fw-semibold">Preço original</label>
                                        <input asp-for="PrecoOriginal" type="number" step="0.01" min="0" class="form-control" />
                                        <span asp-validation-for="PrecoOriginal" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-check mt-3">
                                    <input class="form-check-input" asp-for="MaisVendido" />
                                    <label class="form-check-label" asp-for="MaisVendido">Marcar como “Mais vendido”</label>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Coluna lateral (Imagem) -->
                    <div class="col-12 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body p-4">
                                <h5 class="section-title mb-3"><i class="bi bi-image me-2"></i>Capa do Curso</h5>

                                <div class="ratio ratio-16x9 rounded-3 bg-light overflow-hidden mb-3">
                                    <img id="previewImg" src="@(!string.IsNullOrWhiteSpace(Model?.ImagemUrl) ? Model.ImagemUrl : "/img/cursos/placeholder.jpg")"
                                         class="w-100 h-100 object-fit-cover" alt="Pré-visualização" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">URL da imagem (opcional)</label>
                                    <input asp-for="ImagemUrl" class="form-control" placeholder="https://..." id="imgUrlInput" />
                                    <span class="form-text">Se preferir, envie um arquivo abaixo.</span>
                                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Enviar arquivo (opcional)</label>
                                    <input type="file" name="imagemArquivo" id="imgFileInput" class="form-control" accept="image/*" />
                                    <span class="form-text">PNG/JPG até ~5MB.</span>
                                </div>

                                <button type="button" class="btn btn-outline-secondary w-100" id="btnClearImg">
                                    <i class="bi bi-x-circle me-1"></i> Remover imagem
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ações -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-light border">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Salvar curso
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-create {
            background: linear-gradient(180deg,#eef3f8 0%,#f7f9fc 100%);
            border-radius: 18px;
            padding: 26px 24px;
            box-shadow: 0 6px 22px rgba(21,34,50,.06);
        }

        .hero-title {
            font-weight: 800;
            letter-spacing: .2px;
            color: #2d3e50;
        }

        .section-title {
            font-weight: 700;
            color: #2d3e50;
        }

        .object-fit-cover {
            object-fit: cover;
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        const preview = document.getElementById('previewImg');
        const urlInput = document.getElementById('imgUrlInput');
        const fileInput = document.getElementById('imgFileInput');
        const btnClear = document.getElementById('btnClearImg');

        urlInput?.addEventListener('input', e => {
            const v = e.target.value?.trim();
            if (v && /^https?:\/\//i.test(v)) preview.src = v;
        });

        fileInput?.addEventListener('change', e => {
            const file = e.target.files?.[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = ev => preview.src = ev.target.result;
            reader.readAsDataURL(file);
        });

        btnClear?.addEventListener('click', () => {
            preview.src = "/img/cursos/placeholder.jpg";
            if (urlInput) urlInput.value = "";
            if (fileInput) fileInput.value = "";
        });
    </script>
}
