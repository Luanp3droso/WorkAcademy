@model IEnumerable<WorkAcademy.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
    string busca = Context.Request.Query["busca"];
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-4">
    <h2 class="mb-4">Cursos disponíveis</h2>

    <!-- Barra de busca -->
    <form method="get" class="input-group mb-4" asp-controller="Cursos" asp-action="Index">
        <input type="text" name="busca" class="form-control" placeholder="Buscar curso..." value="@busca" />
        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var curso in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@curso.ImagemUrl" class="card-img-top" style="height: 180px; object-fit: cover;" />
                    <div class="card-body">
                        @if (curso.MaisVendido)
                        {
                            <span class="badge bg-warning text-dark mb-2">Mais vendido</span>
                        }

                        <h5 class="card-title">@curso.Nome</h5>
                        <p class="mb-1 text-muted">Instrutor: @curso.NomeInstrutor</p>

                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= curso.Avaliacao ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                            }
                            <small>(@curso.TotalAvaliacoes)</small>
                        </div>

                        <p class="mb-1">
                            <span class="fw-bold text-danger">R$ @curso.Valor.ToString("F2")</span>
                            <span class="text-muted text-decoration-line-through ms-2">R$ @curso.PrecoOriginal.ToString("F2")</span>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Details", "Cursos", new { id = curso.Id })" class="btn btn-outline-primary w-100">Inscrever-se</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Usuario")" class="btn btn-outline-primary w-100">Inscrever-se</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
